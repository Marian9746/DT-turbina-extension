  {
    "id": "mqtt_in",
    "type": "mqtt in",
    "z": "flow_main",
    "name": "Sensor Data",
    "topic": "windturbine/sensors",
    "qos": "1",
    "datatype": "json",
    "broker": "mqtt_broker",
    "nl": false,
    "rap": true,
    "rh": 0,
    "inputs": 0,
    "x": 130,
    "y": 140,
