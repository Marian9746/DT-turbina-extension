    "name": "Parse JSON",
    "property": "payload",
    "action": "",
    "pretty": false,
    "x": 310,
    "y": 140,
    "wires": [["process_data", "debug_parsed"]]
  },
  {
    "id": "process_data",
    "type": "function",
    "z": "flow_main",
    "name": "Process & Enrich",
    "func": "// Enriquecer datos con metadata adicional\nconst enrichedData = {\n    ...msg.payload,\n    processedAt: new Date().toISOString(),\n    source: 'node-red',\n    version: '1.0'\n};\n\n// Añadir alertas si es necesario\nif (enrichedData.temperature > 45) {\n    enrichedData.alert = 'HIGH_TEMPERATURE';\n} else if (enrichedData.windSpeed > 20) {\n    enrichedData.alert = 'HIGH_WIND';\n} else {\n    enrichedData.alert = null;\n}\n\nmsg.payload = enrichedData;\nreturn msg;",
    "outputs": 1,
    "noerr": 0,
    "initialize": "",
    "finalize": "",
    "libs": [],
    "x": 500,
    "y": 140,
    "wires": [["websocket_out", "mqtt_processed", "debug_processed"]]
  },
  {
    "id": "websocket_out",
    "type": "websocket out",
    "z": "flow_main",
    "name": "WebSocket Output",
    "server": "ws_server",
    "client": "",
